
  <name><%= person.with_indifferent_access[:last_name] %>, <%= person.with_indifferent_access[:first_names] %></name>
  <%= print person, :first_names %>
  <%= print person, :last_name %>
  <%= print person, :initials %>
  <%= print person, :username, :staff_nbr %>

  <% if person.has_key?("function")  %>
    <functions>
    <% person["function"].each do |function| %>
      <function><%= function %></function>
    <% end %>
    </functions>
    
    <pnx_display_name>
    <%= person.with_indifferent_access[:last_name] %>, <%= person.with_indifferent_access[:first_names] %> (<%= person["function"].join(',') %>) 
    $$Q <%= person.with_indifferent_access[:last_name] %>, <%= person.with_indifferent_access[:first_names] %>
    </pnx_display_name>
 
  <% else %>    
      <pnx_display_name><%= person.with_indifferent_access[:last_name] %>, <%= person.with_indifferent_access[:first_names] %></pnx_display_name>
  <% end %>

  <% if person.has_key?("identifiers") || person.has_key?("username") %>
  <identifiers>
  <% if person.has_key?("username") %>
    <%= print person, :username, :staff_nbr %>
    <staff_nbr_link>$$D<%= person.with_indifferent_access[:last_name] %>, <%= person.with_indifferent_access[:first_names] %>$$U<%= person.with_indifferent_access[:username] %></staff_nbr_link>
  <% end %>
  <% if person.has_key?("identifiers") %>
    <%
      identifiers = person["identifiers"]["identifier"]
      identifiers = [ identifiers ] unless identifiers.is_a?(Array)
    %>
    <% identifiers.each do |identifier| %>
      <<%= identifier.attributes["scheme"]  %>><%= identifier %></<%= identifier.attributes["scheme" ]%>>
      <<%= identifier.attributes["scheme"]  %>_link>$$D<%= person.with_indifferent_access[:last_name] %>, <%= person.with_indifferent_access[:first_names] %>$$U<%= identifier %></<%= identifier.attributes["scheme" ]%>_link>
    <% end %>
  <% end %>
  </identifiers>
  <% end %>